#! /bin/bash

releaseMode=""
if [[ $1 == "release" ]];then
  releaseMode="--configuration Release"
  build=""
elif [[ $1 != "" ]];then
  build=".$1"
fi
if [[ $2 == "release" ]];then
  releaseMode="--configuration Release"
fi

#fail fast
set euo -pipefail

echo "TradeExecution"

. ../../../config

startCommand="dotnet run $releaseMode -p Adaptive.ReactiveTrader.Server.Launcher exec"
waitCommand="while true; do echo ping; sleep 60; done"

docker rm tradeexecution 2&> garbage || true

docker run -d --net=host                     \
     --name tradeexecution                   \
     $serversContainer$build                 \
     bash -c "$startCommand && $waitCommand" \
     > container_id 

rm garbage

echo " "
